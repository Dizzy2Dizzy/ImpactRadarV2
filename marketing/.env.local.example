# Impact Radar - Next.js Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/impactradar

# Authentication
SECRET_KEY=your-secret-key-here-generate-a-random-string
SESSION_SECRET=your-session-secret-here-generate-a-random-string

# FastAPI Backend URL
NEXT_PUBLIC_API_URL=http://localhost:8080

# Sentry Error Monitoring (Optional)
# Get your DSN from: https://sentry.io/settings/projects/[your-project]/keys/
# Public DSN - safe to expose in browser, used for client-side error tracking
NEXT_PUBLIC_SENTRY_DSN=

# Environment: development, staging, or production
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
SENTRY_ENVIRONMENT=development

# Sentry Auth Token (Optional - for source map uploads)
# Generate at: https://sentry.io/settings/auth-tokens/
# Required scopes: project:releases, project:write, org:read
SENTRY_AUTH_TOKEN=

# Your Sentry organization slug (e.g., my-company)
SENTRY_ORG=

# Your Sentry project slug (e.g., impactradar-nextjs)
SENTRY_PROJECT=

# Email Configuration (Optional - for email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Stripe Payment Integration (Optional)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Feature Flags
ENABLE_STRIPE=false
ENABLE_SMS_VERIFICATION=false
ENABLE_EMAIL_VERIFICATION=true
