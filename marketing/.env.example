# ReleaseRadar Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# BACKEND API
# ============================================================================
BACKEND_URL=http://localhost:8080
NEXT_PUBLIC_API_URL=/api/proxy

# ============================================================================
# FEATURE FLAGS (V1 Beta Scope)
# ============================================================================
# Client-side feature flags (fallback if backend is unavailable)
# All flags default to false for conservative V1 launch
NEXT_PUBLIC_ENABLE_LIVE_WS=false
NEXT_PUBLIC_ENABLE_LABS_UI=false
NEXT_PUBLIC_ENABLE_X_SENTIMENT=false
NEXT_PUBLIC_ENABLE_ALERTS_BETA=false
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=false
