# ReleaseRadar Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/releaseradar
PGHOST=localhost
PGPORT=5432
PGUSER=user
PGPASSWORD=password
PGDATABASE=releaseradar

# ============================================================================
# APPLICATION
# ============================================================================
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_SECRET=your-session-secret-here-change-in-production

# Allowed Origins (comma-separated for CORS)
ALLOWED_ORIGINS=http://localhost:5000,https://yourdomain.replit.app

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_STRIPE=false
ENABLE_SMS_VERIFICATION=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false
ENABLE_CRYPTO_PAYMENTS=false

# Feature Flags (V1 Beta Scope)
ENABLE_LIVE_WS=false
ENABLE_LABS_UI=false
ENABLE_X_SENTIMENT=false
ENABLE_ALERTS_BETA=false
ENABLE_ADVANCED_ANALYTICS=false

# ============================================================================
# EXTERNAL SERVICES - SEC EDGAR
# ============================================================================
SEC_EDGAR_USER_AGENT=YourCompany contact@example.com
SEC_EDGAR_RATE_LIMIT_REQUESTS=10
SEC_EDGAR_RATE_LIMIT_PERIOD=1

# ============================================================================
# EXTERNAL SERVICES - FDA
# ============================================================================
FDA_BASE_URL=https://www.fda.gov
FDA_RATE_LIMIT_REQUESTS=5
FDA_RATE_LIMIT_PERIOD=1

# ============================================================================
# EXTERNAL SERVICES - YFINANCE
# ============================================================================
YFINANCE_CACHE_TTL=30

# ============================================================================
# EXTERNAL SERVICES - EMAIL (SMTP)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@releaseradar.com
SMTP_FROM_NAME=ReleaseRadar

# ============================================================================
# EXTERNAL SERVICES - SMS (TWILIO)
# ============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# EXTERNAL SERVICES - PAYMENTS (STRIPE)
# ============================================================================
STRIPE_API_KEY=sk_test_your-stripe-test-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_FREE=price_free
STRIPE_PRICE_ID_PRO=price_pro
STRIPE_PRICE_ID_TEAM=price_team

# ============================================================================
# EXTERNAL SERVICES - TWITTER/X API (FOR COMPARISON BOT)
# ============================================================================
# Twitter Bot - Posts comparison tweets showing time advantage
TWITTER_BOT_ENABLED=false
X_API_KEY=your-twitter-api-key
X_API_SECRET=your-twitter-api-secret
X_ACCESS_TOKEN=your-twitter-access-token
X_ACCESS_SECRET=your-twitter-access-token-secret
X_BEARER_TOKEN=your-twitter-bearer-token

# ============================================================================
# CACHING
# ============================================================================
CACHE_DIR=.cache
CACHE_ENABLED=true
HTTP_CACHE_TTL=300

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_REQUESTS=100
RATE_LIMIT_DEFAULT_PERIOD=60

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/releaseradar.log

# ============================================================================
# SCHEDULER
# ============================================================================
SCHEDULER_ENABLED=true
SCANNER_PRIORITY_INTERVAL_MINUTES=5
SCANNER_GENERAL_INTERVAL_MINUTES=30
HOUSEKEEPING_INTERVAL_HOURS=24

# ============================================================================
# SECURITY
# ============================================================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

VERIFICATION_CODE_LENGTH=6
VERIFICATION_CODE_EXPIRY_MINUTES=15
VERIFICATION_MAX_ATTEMPTS=5

SESSION_EXPIRY_HOURS=24
